{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 450,
    "title": {"text":"Where are rockets launched from?", "fontSize":32},

    "background":"aliceblue",
  "params": [
          {"name": "rotate", 
          "value": 0,
          "bind": {"input": "range", "min": -180, "max": 180,"step": 5}
        }
          ],  
    "layer": [
      {
        "data": {"sphere": true},
        "mark": {"type": "geoshape", "fill": "lightblue","stroke":"black","opacity":1}
        
      },
      {
        "data": {
          "graticule": true
        },
        "mark": {
          "type": "geoshape",
          "stroke": "black",
          "strokeWidth": 1,
          "opacity":0.2
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/hsmi0021/fit3179/refs/heads/main/world_map.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        
        "projection": {"type":"equalEarth","rotate":[{"signal":"rotate"},0,0]},
        "mark": {"type": "geoshape", "fill": "gray", "stroke": "black"}
      },
      
      {
        "data": {
          "url": "https://raw.githubusercontent.com/hsmi0021/fit3179/main/launch%20sites.csv"
        },
        "transform": [{"filter":"datum.Error<0.5"}],
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          
          "color":{
            "field":"TStart",
            "type": "temporal",
            "title":" launch provider",
            "scale":{"range":["#FFFF00","#FF0000"]},
            "legend":{"labelFontSize":16,"titleFontSize":18,"title":"Site opned"}
        },

        "tooltip":[
          {"field":"#Site","title":"launch site name"},
          {"field":"ShortName"},
          {"field":"Parent","title":"owner"},
          {"field":"Latitude"},
          {"field":"Longxitude"}

        ]
  
        
        }
      }
      
    ]
  }